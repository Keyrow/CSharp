@model User

<div class="container">
    <form action="/login" method="post">
        <div class="form-group">
            <span class="text-danger" asp-validation-for="LoginEmail"></span>
            <label asp-for="LoginEmail">Email</label>
            <input asp-for="LoginEmail">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="LoginPassword"></span>
            <label asp-for="LoginPassword">Password</label>
            <input asp-for="LoginPassword" type="password">
        </div>
        <input type="submit" value="Login">
    </form> 
</div>