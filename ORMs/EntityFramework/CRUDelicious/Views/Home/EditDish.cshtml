@using CRUDelicious.Models
@model Dishes

<h1>Edit Dish!</h1>
<h3><a href="/">Home</a></h3>

    <form asp-action="EditDish_Funtion" asp-controller="Home" method="POST">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Chef">Chef's Name</label>
                <span class="text-danger" asp-validation-for="Chef"></span>
                <input type="text" class="form-control" asp-for="Chef">
            </div>
            <div class="form-group col-md-1">
                <label asp-for="Tastiness">Tastiness</label>
                <span class="text-danger" asp-validation-for="Tastiness"></span>
                <input class="form-control" asp-for="Tastiness">
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <span class="text-danger" asp-validation-for="Description"></span>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" asp-for="Description"></textarea>
            </div>
        </div>            
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Name">Name of Dish</label>
                <span class="text-danger" asp-validation-for="Name"></span>
                <input type="text" class="form-control" asp-for="Name">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Calories"># of Calories</label>
                <span class="text-danger" asp-validation-for="Calories"></span>
                <input type="text" class="form-control" asp-for="Calories">
            </div>
        </div>
            <button type="submit" class="btn btn-info">Submit</button>
    </form>
