@model UserVM

@* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Register Form ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ *@
<div class="container">
    <h1>Register</h1>
</div>
<div class="container" style="padding-bottom: 50px;">
    <form asp-action="LogReg__Register_Function" asp-controller="Home" method="post">
        <div class="form-group">
            <span class="text-danger" asp-validation-for="user.FirstName"></span>
            <label asp-for="user.FirstName">First Name</label>
            <input asp-for="user.FirstName">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="user.LastName"></span>
            <label asp-for="user.LastName">Last Name</label>
            <input asp-for="user.LastName">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="user.Email"></span>
            <label asp-for="user.Email">Email</label>
            <input asp-for="user.Email">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="user.Password"></span>
            <label asp-for="user.Password">Password</label>
            <input asp-for="user.Password" type="password">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="user.ConfirmPassword"></span>
            <label asp-for="user.ConfirmPassword">Confirm Password</label>
            <input asp-for="user.ConfirmPassword" type="password">
        </div>
        <input type="submit" value="Sign Up">
    </form>
</div>
@* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Login Form ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ *@
<div class="container">
    <h1>Login</h1>
</div>
<div class="container">
    <form asp-action="LogReg_Login_Function" asp-controller="Home" method="post">
        <span class="text-danger" asp-validation-for="login.LoginEmail"></span>
        <div class="form-group">
            <label asp-for="login.LoginEmail">Email</label>
            <input asp-for="login.LoginEmail">
        </div>
        <div class="form-group">
            <label asp-for="login.LoginPassword">Password</label>
            <input asp-for="login.LoginPassword" type="password">
        </div>
        <input type="submit" value="Login">
    </form> 
</div>