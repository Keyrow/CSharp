<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <title>New Hobby</title>
    @model PersonalSite.Models.NewHobby
</head>
<body>
    <nav class="navbar sticky-top navbar-dark bg-dark">
        <h3 style="color: white;">Create a Hobby</h3>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class='nav-link' href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class='nav-link' href="/logout">Logout</a>
            </li>
        </ul>
    </nav><br>
    <table>
        <form class="form" asp-action="CreateHobby" asp-controller="Home" method="post">
            <tr>
                <td><label asp-for="Name">Name:</label></td>
                <td><input asp-for="Name" type="text" name="Name"></td>
                <td><span asp-validation-for="Name"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Description">Description:</label></td>
                <td><input asp-for="Description" type="text" name="Description"></td>
                <td><span asp-validation-for="Description"></span></td>
            </tr>
            <tr>
                <td><button class="btn btn-success">Create</button></td>
            </tr>
        </form>
    </table>
</body>
</html>