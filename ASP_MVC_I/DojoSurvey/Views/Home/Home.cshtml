@model List<string>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm text-center">
            <h1 style="padding-bottom: 50px;">Dojo Survey Home Page</h1>
            <div class="col-sm-6 offset-3">
                <form action="Results" method="POST">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Name: </label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" name="name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Location: </label>
                        <div class="col-sm-8">
                            <select class="form-control" type="text" name="location">
                                <option value="Seattle">Seattle</option>
                                <option value="Tulsa">Tulsa</option>
                                <option value="Arlinton">Arlington</option>
                                <option value="Dallas">Dallas</option>
                                <option value="Silicon Valley">Silicon Valley</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Favorite Language: </label>
                        <div class="col-sm-8">
                            <select class="form-control" type="text" name="language">
                                <option value="C#">C#</option>
                                <option value="Java">Java</option>
                                <option value="Python">Python</option>
                                <option value="PHP">PHP</option>
                                <option value="Javascript">Javascript</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Comment (optional): </label>
                        <div class="col-sm-8">
                            <textarea class="textarea" type="text" name="comment" cols="45" rows="5"></textarea>
                        </div>
                    </div>
                    <br>
                    <input type="submit" value="Submit" class="btn btn-primary">
                </form>
            </div>
        </div>
    </div>
</div>